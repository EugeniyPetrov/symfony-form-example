{% extends 'bootstrap_4_horizontal_layout.html.twig' %}

{% block paginator_widget %}
    <input type="hidden" {{ block('widget_attributes') }} value="{{ value }}">
    Total number of users: {{ total_count }}
    <div class="navigation">
        <nav aria-label="...">
            <ul class="pagination">
                <li class="page-item {% if value <= 1 %} disabled {% endif %}">
                    <a class="page-link" href="" data-page="{{ value-1 }}" data-paginator-id="{{ id }}" tabindex="-1"><i class="fas fa-backward"></i></a>
                </li>
                
                {% for i in (value-5)..(value+5) %}
                    {% if i > 0 and i <= items_per_page %}
                        <li class="page-item {% if value == i %} active {% endif %}">
                            <a class="page-link" href="" data-page="{{ i }}" data-paginator-id="{{ id }}"> {{ i }}</a>
                        </li>
                    {% endif %}
                {% endfor %}

                <li class="page-item {% if value >= items_per_page %} disabled {% endif %}">
                    <a class="page-link" href="" data-page="{{ value+1 }}" data-paginator-id="{{ id }}"><i class="fas fa-forward"></i></a>
                </li>
            </ul>
        </nav>
    </div>
{% endblock %}
